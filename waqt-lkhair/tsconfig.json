{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/app/components/*"],
      "@screens/*": ["src/app/screens/*"],
      "@store/*": ["src/app/store/*"],
      "@services/*": ["src/app/services/*"],
      "@types/*": ["src/app/types/*"],
      "@utils/*": ["src/app/utils/*"],
      "@navigation/*": ["src/app/navigation/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
